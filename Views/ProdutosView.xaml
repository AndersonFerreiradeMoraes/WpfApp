<UserControl x:Class="WpfApp.Views.ProdutosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp.ViewModels"
             xmlns:conv="clr-namespace:WpfApp.Converters">

    <UserControl.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:ProdutosViewModel />
    </UserControl.DataContext>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">

            <!-- Nome -->
            <Grid Width="200" Margin="0,0,8,0">
                <TextBox x:Name="txtNome" Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Nome" Foreground="Gray" Margin="4,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=txtNome, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <!-- C처digo -->
            <Grid Width="150" Margin="0,0,8,0">
                <TextBox x:Name="txtCodigo" Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="C처digo" Foreground="Gray" Margin="4,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=txtCodigo, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <!-- Valor Min -->
            <Grid Width="80" Margin="0,0,8,0">
                <TextBox x:Name="txtValorMin" Text="{Binding ValorMin, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Valor Min" Foreground="Gray" Margin="4,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=txtValorMin, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <!-- Valor Max -->
            <Grid Width="80" Margin="0,0,8,0">
                <TextBox x:Name="txtValorMax" Text="{Binding ValorMax, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Valor Max" Foreground="Gray" Margin="4,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=txtValorMax, Converter={StaticResource StringToVisibilityConverter}}"/>
            </Grid>

            <Button Content="Salvar" Width="90" Click="Salvar_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Produtos}" AutoGenerateColumns="False" CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="C처digo" Binding="{Binding Codigo}" Width="150"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bot찾o Excluir -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Excluir" Width="100" Click="Excluir_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
